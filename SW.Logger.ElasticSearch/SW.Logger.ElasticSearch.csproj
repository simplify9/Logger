    <PackageReference Include="SimplyWorks.PrimitiveTypes" Version="8.0.0" />

  </ItemGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

