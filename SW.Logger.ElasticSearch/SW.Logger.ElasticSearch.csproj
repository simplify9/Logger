    <PackageId>SimplyWorks.Logger.ElasticSearch</PackageId>
    <Authors>Simplify9</Authors>
    <Product>SimplyWorks.Logger.ElasticSearch</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
    <PackageProjectUrl>https://github.com/simplify9/Logger</PackageProjectUrl>
